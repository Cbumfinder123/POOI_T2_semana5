@model IEnumerable<AssetManagement.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Department</th>
        <th>Email Address</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.first_name)</td>
            <td>@Html.DisplayFor(modelItem => item.last_name)</td>
            <td>@Html.DisplayFor(modelItem => item.departament)</td>
            <td>@Html.DisplayFor(modelItem => item.email_address)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.employee_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.employee_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.employee_id })
            </td>
        </tr>
    }
</table>
